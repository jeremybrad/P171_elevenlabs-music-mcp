# ElevenLabs Music MCP Server - Environment Configuration

# REQUIRED: Your ElevenLabs API Key
# Get it from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=sk_your_api_key_here

# Output directories (uses ~ for home directory)
MUSIC_OUTPUT_DIR=~/Music/ElevenLabs/generated
JOURNAL_OUTPUT_DIR=~/Music/ElevenLabs/journal

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=~/.local/share/elevenlabs-music-mcp/server.log

# Feature flags (Phase 2+)
ENABLE_PREFERENCE_LEARNING=false
ENABLE_JOURNAL_INTEGRATION=false
ENABLE_MOOD_ANALYSIS=false

# API Settings
API_TIMEOUT_SECONDS=30
MAX_RETRIES=3

# File Settings
DEFAULT_OUTPUT_FORMAT=mp3_44100_128  # High quality MP3
DEFAULT_DURATION_MS=60000  # 60 seconds if not specified

# Development
DEBUG_MODE=false
USE_MOCK_API=false  # For testing without API credits
